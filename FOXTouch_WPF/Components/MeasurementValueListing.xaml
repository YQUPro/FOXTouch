<UserControl x:Class="FOXTouch_WPF.Components.MeasurementValueListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FOXTouch_WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800" 
             FontSize="20"
             SnapsToDevicePixels="True"
>
    <Grid>
        <ListView
            ItemsSource="{Binding MeasurementValueListingItemViewModels}"
            Background="Transparent"
            >

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    <Setter Property="MaxHeight" Value="84"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Première colonne -->
                        <Image 
                                Grid.Row="0"
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                MaxWidth="32"
                                MaxHeight="32"
                                Source="{Binding PictureResultFeatureType}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                />

                        <TextBlock 
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontWeight="Thin"
                                Foreground="White"
                                Text="{Binding LastStoredValueDeviation}"
                                />

                        <!-- Deuxième colonne -->
                        <TextBlock 
                                Grid.Row="0"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}"
                                />

                        <TextBlock 
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Foreground="White"
                                Text="{Binding LastStoredValue}"
                                />

                        <!-- Troisième colonne -->
                        <Image 
                                Grid.Row="0"
                                Grid.Column="2"
                                Width="32"
                                Height="32"
                                MaxWidth="32"
                                MaxHeight="32"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                 Source="{Binding PictureLastStoredValueMeasurementResult}"
                                />

                        <TextBlock 
                                Grid.Row="1"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Foreground="White"
                                Padding="5 0 0 0"
                                Text="{Binding Unit}"
                                />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
